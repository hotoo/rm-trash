#!/bin/bash

function usage() {
  echo "Usage: rmtrash [directories files]"
  echo
  echo "Options:"
  echo "    -h, --help          show help infomation."
  echo
  exit 0
}

if [ "$*" = "-h" ]; then
  usage
elif [ "$*" = "--help" ]; then
  usage
elif [ "$*" = "" ]; then
  usage
fi


function rm2trash() {
  fp="$(cd "$(dirname "$1")"; pwd -P)/$(basename "$1")"

  if [ ! -e $fp ]; then
    echo -e "\033[31mNot Found file\033[0m $fp"
    return
  fi
  osascript << EOF
  tell application "Finder"
    posix path of ((delete posix file "${fp}") as unicode text)
  end tell
EOF
}

for arg in $@
do
  rm2trash $arg
done
